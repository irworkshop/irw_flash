package{import flash.display.MovieClip;import flash.events.Event;import com.dVyper.utils.Alert;import flash.display.Sprite;import flash.filters.DropShadowFilter;import flash.display.Bitmap;import flash.events.*;import org.fenton.sliders.DiscreteVerticalSlider;[SWF(width="500",height="300", frameRate="24", backgroundColor="0xFFFFFF")]public class zoom_control extends MovieClip{		[Embed(source='IRW_magnify_icon_zoom.gif')]	private var zoomInImg:Class;	private var zoomIn:Bitmap = new zoomInImg ();	[Embed(source='IRW_magnify_icon_zoom_out.gif')]	private var zoomOutImg:Class;	private var zoomOut:Bitmap = new zoomOutImg ();		private var zoomSlider:DiscreteVerticalSlider;		// constructor	public function zoom_control() {		var zb:Sprite = drawZoomBox();		zb.x = 20;		zb.y = 20;		addChild(zb);	}			public function drawZoomBox():Sprite {			var zoom_container:Sprite = new Sprite();				// draw an overall rounded rect to hold everything: 		zoom_container.graphics.lineStyle(2,0x666666);		zoom_container.graphics.beginFill(0xFFFFFF,1);		zoom_container.graphics.drawRoundRect(0, 0, 40, 104, 10);		zoom_container.graphics.endFill();				var shadow:DropShadowFilter = new DropShadowFilter(); 		shadow.distance = 7; 		shadow.angle = 45; 		shadow.alpha = 0.3;				zoom_container.filters=[shadow];				var zoomInSprite = new Sprite();		zoomIn.height=17;		zoomIn.width=20;		zoomInSprite.addChild(zoomIn);		zoomInSprite.x=10;		zoomInSprite.y=5;		zoom_container.addChild(zoomInSprite);				var zoomOutSprite = new Sprite();		zoomOut.height=17;		zoomOut.width=20;		zoomOutSprite.addChild(zoomOut);		zoomOutSprite.x=10;		zoomOutSprite.y=82;		zoom_container.addChild(zoomOutSprite);					// add listeners to sprites containing images:		zoomInSprite.addEventListener(MouseEvent.MOUSE_DOWN, runZoomIn, false, 0, true);		zoomOutSprite.addEventListener(MouseEvent.MOUSE_DOWN, runZoomOut, false, 0, true);				zoomSlider =new DiscreteVerticalSlider(50,3, false);				zoomSlider.x=10;		zoomSlider.y=27;		zoom_container.addChild(zoomSlider);				zoomSlider.setKnobPos(0);		zoomSlider.addEventListener(DiscreteVerticalSlider.SLIDER_CHANGE, showChange);						  								return zoom_container;	}		function showChange(e:Event): void {		trace("new slider position: " + String(zoomSlider.getKnobPos()) );	}		private function runZoomIn(e:MouseEvent):void {		zoomSlider.decreaseKnobPos()	}		private function runZoomOut(e:MouseEvent):void {		zoomSlider.increaseKnobPos()	}} // end of class} // end of package